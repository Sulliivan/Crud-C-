@model EnvoiEmailViewModel
@{
    ViewData["Title"] = "Contactez nous !";
}

<h1>Contactez nous !</h1>
<p>Avez vous trouvé un bug ?</p>
<p>Avez vous des suggestions pour améliorer ce site ?</p>
<p>Dites le nous ?</p>
<br />
<form action="/Contact/SaveMessage">

    @Html.ValidationSummary("")


    <div class="form-group">
        <label> Nom: </label>
        <input type="text" name="nom" value="@Model.Nom" class="form-control" />
    </div>

    <div class="form-group">
        <label> Email: </label>
        <input type="text" name="email" value="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label> Email: </label>
        <textarea cols="10" name="message" value="@Model.Message" class="form-control"></textarea>
    </div>

    <input type="submit" value="Envoyer un message" />

</form>
 